{
    "manifest_version": 2,
    "name": "NeWoRdS",
    "version": "1.0",
    "description": "Changes font style on a specific page",
    "icons": {
        "128": "icon128.png",
        "48": "icon48.png",
        "16": "icon16.png"
    },
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html",
        "default_title": "PageFontStyle"
    },
    "options_page": "options.html",
    "background": {
        "scripts" : ["neword_core.js", "background.js"],
        "persistent" : false
    },
    "content_scripts": [
        {
            "matches": ["https://*/*", "http://*/*", "<all_urls>", "file://*/*"],
            "js": ["jquery.js", "content.js"],
            "css": ["content.css"]
        }
    ],
    "permissions": [
        "tabs",
        "notifications",
        "storage",
        "contextMenus",
        "https://*/*",
        "http://*/*",
        "<all_urls>"
    ]
}